<resources>

    <!--<color name="black">#000000</color>-->
    <!--<color name="white">#ffffff</color>-->
    <color name="defBlue">#2c2c7f</color>
    <color name="darkBlue">#2c2c7f</color>
    <color name="primaryColor">#e34540</color>
    <color name="primaryColorDark">#D32F2F</color>
    <color name="primaryColorAccent">@color/owl_dark</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryColorAccent</item>

        <item name="colorButtonNormal">@color/primaryColorDark</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColor">@color/chumbo</item>
        <item name="android:textColorHint">@color/grey_very_dark</item>
    </style>

    <style name="ButtonWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <!-- Style das abas -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/secondRed</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- Style para o share ficar branco na toolbar -->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Style para os forms -->
    <style name="FormStyle" parent="AppTheme">
        <item name="colorControlNormal">@color/grey_very_dark</item>
        <item name="colorControlActivated">@color/grey_very_dark</item>
        <item name="colorControlHighlight">@color/grey_very_dark</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
